                        <h4 style="font-size: 20px;">
                            <strong><u>Buyer Details</u></strong>
                        </h4>
                        <p class="company_details">
                            <strong style="font-size: 19px;">
                                <span t-esc="o.company_id.name" />
                            </strong>
                            <t t-if="o.company_id.street">
                                <br />
                                <span t-esc="o.company_id.street" />
                            </t>
                            <t t-if="o.company_id.street2">
                                <br />
                                <span t-esc="o.company_id.street2" />
                            </t>
                            <t t-if="o.company_id.state_id or o.company_id.country_id or o.company_id.zip">
                                <br />
                                <t t-if="o.company_id.state_id">
                                    <span t-esc="o.company_id.state_id.name+', '" />
                                </t>
                                <t t-if="o.company_id.country_id">
                                    <span t-esc="o.company_id.country_id.name" />
                                </t>
                                <t t-if="o.company_id.zip">
                                    <span t-esc="o.company_id.zip+'- '" />
                                </t>
                            </t>
                            <t t-if="o.company_id.vat or o.company_id.company_registry">
                                <br />
                                <t t-if="o.company_id.vat">
                                    <span t-esc="'VAT Number: '+o.company_id.vat" />
                                </t>
                                <t t-if="o.company_id.company_registry">
                                    <span t-esc="', CRN: '+o.company_id.company_registry" />
                                </t>
                            </t>
                        </p>

                        <!-- <h4 class="mt-3">
                            <strong style="font-size: 21px;">SUBJECT: </strong>
                            <span style="font-size: 22px;" t-if="o.subject_ref" t-field="o.subject_ref" />
                        </h4> -->
                    </div>
                </div>
                <div class="row">
                    <div class="col-8" style="font-size: 20px;">
                        <div class="">
                            <strong style="font-size: 18px;">RFQ No: </strong>
                            <span t-if="o.name" t-field="o.name" class="px-1"/>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-8" style="font-size: 20px;">
                        <div class="">
                            <strong style="font-size: 18px;">DELIVERY LOCATION: </strong>
                            <span t-if="o.incoterm_location" t-field="o.incoterm_location" class="px-1"/>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-8" style="font-size: 20px;">
                        <div class="">
                            <strong style="font-size: 18px;">DISPATCH THROUGH: </strong>
                            <span t-if="o.incoterm_location" t-field="o.incoterm_location" class="px-1"/>
                        </div>
                    </div>
                </div>
                <!-- <t t-set="address">
                    <div t-field="o.partner_id"
                        t-options='{"widget": "contact", "fields": ["address", "name", "phone", "vat"], "no_marker": True, "phone_icons": True}'/>
