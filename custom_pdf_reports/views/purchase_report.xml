                <div class="row">
                    <div class="col-8" style="font-size: 20px;">
                        <div t-if="o.date_approve" class="">
                            <strong>DATE: </strong>
                            <span t-field="o.date_approve" t-options="{'date_only': 'true'}" class="px-1"/>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-8" style="font-size: 22px; color: #bd9311;">
                        <div t-if="o.name" class="">
                            <strong>PO No: </strong>
                            <strong t-field="o.name" class="px-1" style="font-size: 21px;"/>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-8" style="font-size: 20px;">
                        <div class="">
